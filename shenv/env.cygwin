# {{{ pathmunge: Add paths to PATH as needed
pathmunge() {
  # If the new directory is already in our PATH skip it
  case "$:${PATH}:" in
    *:"$1":*)
      ;;
    *)
      if [ "$2" == "after" ];then
        PATH="$PATH":$(/bin/cygpath "$1")
      else
        PATH=$(/bin/cygpath "$1"):"$PATH"
      fi
  esac
}

